{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@molecule": [
        "src/component/molecule/index"
      ], //resolves comp at index
      "@molecule/*": [
        "./src/component/molecule/*"
      ], //resolves every other export in molecule
      "@atom": [
        "src/component/atom/index"
      ], //resolves comp at index
      "@atom/*": [
        "src/component/atom/*"
      ], //resolves every other export in atom
      "@organisms": [
        "src/component/organisms/index"
      ],
      "@organisms/*": [
        "src/component/organisms/*"
      ],
      "@zod": [
        "src/utils/zod/index"
      ],
      "@zod/*": [
        "src/utils/zod/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}